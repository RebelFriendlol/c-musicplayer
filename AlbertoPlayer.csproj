    <Content Include="assets\Belmondo.jpg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="assets\next.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
