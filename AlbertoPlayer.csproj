    <None Remove="assets\random.png" />
    <None Remove="assets\repeat.png" />
    <None Remove="back.png" />
    <None Remove="next.png" />
    <None Remove="PlayButton.png" />
    <None Remove="random.png" />
    <None Remove="repeat.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="assets\alberto_logo.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Content Include="assets\Alberto1.png">
